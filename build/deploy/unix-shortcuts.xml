<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>

  <programGroup defaultName="GATE $APP_VER" location="applications"/>

   <shortcut
     name="GATE $APP_VER GUI"
     programGroup="yes"
     target="$INSTALL_PATH/bin/gate.sh"
     workingDirectory="$INSTALL_PATH"
     description="Starts the GATE $APP_VER GUI"
     initialState="normal"
     desktop="yes"
		 type="Application"
     encoding="UTF-8">
     <createForPack name="bin"/>
   </shortcut>

   <shortcut
     name="GATE User Guide"
     programGroup="yes"
     target="$INSTALL_PATH/tao.pdf"
     description="The GATE User Guide"
     type="Link">
     <createForPack name="doc"/>
   </shortcut>
</shortcuts>
