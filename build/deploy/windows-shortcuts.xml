<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>

  <programGroup defaultName="GATE $APP_VER" location="applications"/>

   <shortcut
     name="GATE $APP_VER GUI"
     programGroup="yes"
     target="$JAVA_HOME/bin/java.exe"
     commandLine='-classpath "$INSTALL_PATH\lib\ant-launcher.jar" -Dant.home="$INSTALL_PATH" -nouserlib -noclasspath org.apache.tools.ant.launch.Launcher run'
     workingDirectory="$INSTALL_PATH"
     description="Starts the GATE $APP_VER GUI"
     initialState="normal"
     iconFile="$INSTALL_PATH/icons/gate-icon.ico"
     desktop="no"
		 type="Application"
     encoding="UTF-8">
     <createForPack name="bin"/>
   </shortcut>
</shortcuts>