<?xml version="1.0"?>
<!-- $Id$ -->
<CREOLE-DIRECTORY>
  <!-- Processing Resources -->
  <CREOLE>   
   <RESOURCE>
      <NAME>OLD Document Editor</NAME>
      <CLASS>gate.gui.DocumentEditor</CLASS>
      <!-- type values can be "large" or "small"-->
      <GUI TYPE="large">
        <RESOURCE_DISPLAYED>gate.Document</RESOURCE_DISPLAYED>
      </GUI>
    </RESOURCE>

    <!-- VR def for gate unrestricted annotation viewer -->
    <RESOURCE>
      <NAME>Unrestricted annotation editor</NAME>
      <CLASS>gate.gui.UnrestrictedAnnotationEditor</CLASS>
      <GUI>
        <MAIN_VIEWER/>
      </GUI>
    </RESOURCE>
    
    <!-- VR def for gate annotation schema viewer -->
    <RESOURCE>
      <NAME>Schema annotation editor</NAME>
      <CLASS>gate.gui.SchemaAnnotationEditor</CLASS>
      <GUI>
        <MAIN_VIEWER/>
      </GUI>
    </RESOURCE>
    
    <RESOURCE>
      <NAME>Features Editor</NAME>
      <CLASS>gate.gui.FeaturesEditor</CLASS>
      <!-- type values can be "large" or "small"-->
      <GUI TYPE="large">
        <MAIN_VIEWER/>
        <RESOURCE_DISPLAYED>gate.util.FeatureBearer</RESOURCE_DISPLAYED>
      </GUI>
    </RESOURCE>

    <!-- creole.xml for the APF exporter -->
    <RESOURCE>
      <NAME>GATE APF exporter</NAME>
      <CLASS>gate.creole.APFormatExporter</CLASS>
      <COMMENT>An APF exporter .</COMMENT>
      <PARAMETER NAME="document" COMMENT="The document to be exported"
        RUNTIME="true">gate.corpora.DocumentImpl</PARAMETER>
      <PARAMETER NAME="source"
        COMMENT="The source attribute attached to a source file" RUNTIME="true">
        java.lang.String</PARAMETER>
      <PARAMETER NAME="dtdFileName"
        COMMENT="The path to the DTD for the APF file"
        DEFAULT="ace-rdc.v2.0.1.dtd.dtd">java.lang.String</PARAMETER>
      <PARAMETER NAME="exportFilePath" COMMENT="Source URL where to export"
        RUNTIME="true" SUFFIXES="xml">java.net.URL</PARAMETER>
      <PARAMETER DEFAULT="Organization;Person;Location;Facility;GPE"
        NAME="exportedTypes">java.util.ArrayList</PARAMETER>
      <PARAMETER DEFAULT="true"
        COMMENT="Should the SOURCE be written to the APF file"
        NAME="isSourceWritten">java.lang.Boolean</PARAMETER>
    </RESOURCE>

    <!-- creole.xml for the DAML+OIL exporter -->
    <RESOURCE>
      <NAME>DAML+OIL exporter</NAME>
      <CLASS>gate.creole.RDFFormatExporter</CLASS>
      <COMMENT>A DAML+OIL exporter</COMMENT>
      <PARAMETER NAME="document" COMMENT="The document to be exported"
        RUNTIME="true">gate.corpora.DocumentImpl</PARAMETER>
      <PARAMETER NAME="ontology" COMMENT="Ontology" SUFFIXES="daml;rdf">
        java.net.URL</PARAMETER>
      <PARAMETER DEFAULT="Organization;Person;Location;Facility;GPE"
        NAME="exportedTypes">java.util.ArrayList</PARAMETER>
      <PARAMETER NAME="exportFilePath"
        COMMENT="Destination URL where to export" SUFFIXES="daml;rdf">
        java.net.URL</PARAMETER>
      <PARAMETER DEFAULT="DAML+OIL" NAME="exportFormat">
        java.lang.String</PARAMETER>
      <!-- new Parameter added by Niraj -->
      <PARAMETER NAME="annotationSetName"
        COMMENT="AnnotationSet that should be exported" RUNTIME="true"
        OPTIONAL="true">java.lang.String</PARAMETER>
      <ICON>daml.jpg</ICON>
    </RESOURCE>

  </CREOLE>
</CREOLE-DIRECTORY>
