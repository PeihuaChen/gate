<?xml version="1.0"?>
<!-- $Id$ -->
<!-- creole.xml directory file for GATE builtins -->
<CREOLE-DIRECTORY> 
  <CREOLE>
    <!-- Taxonomy -->
    <RESOURCE>
      <NAME>Taxonomy</NAME>
      <CLASS>com.ontotext.gate.ontology.DAMLOntology</CLASS>
      <INTERFACE>gate.creole.ontology.Taxonomy</INTERFACE>
      <COMMENT>Taxonomy</COMMENT>
      <PARAMETER NAME="URL" DEFAULT="gate:/creole/ontology/demo.daml" COMMENT="The URL of the Ontology">java.net.URL</PARAMETER>
      <ICON>controller.gif</ICON>
    </RESOURCE>

  <!-- Ontology -->

  <RESOURCE>
    <NAME>Ontology</NAME>
    <CLASS>com.ontotext.gate.ontology.DAMLKnowledgeBaseImpl</CLASS>
    <INTERFACE>gate.creole.ontology.Ontology</INTERFACE>
    <COMMENT>Ontology</COMMENT>
    <PARAMETER NAME="URL" DEFAULT="gate:/creole/ontology/demo.daml"
       COMMENT="The URL of the Knowledge Base">java.net.URL</PARAMETER>
    <ICON>lrs.gif</ICON>
  </RESOURCE>

    <!-- Protege project name -->
    <RESOURCE>
      <NAME>Protege project</NAME>
      <CLASS>gate.creole.ProtegeProjectName</CLASS>
      <COMMENT>Protege project file name</COMMENT>
      <INTERFACE>gate.ProtegeProject</INTERFACE>
      <PARAMETER
        NAME="projectName"
        SUFFIXES="pprj"
        COMMENT="Protege project file name">java.net.URL</PARAMETER>
      <PARAMETER NAME="URL" DEFAULT="gate:/creole/ontology/demo.daml" COMMENT="The URL of the Ontology">java.net.URL</PARAMETER>
      <ICON>lr.gif</ICON>
    </RESOURCE>
  </CREOLE>

  <!-- Processing Resources -->
  <CREOLE>
    <!-- creole.xml for OntoGazetteer -->
    <RESOURCE>
      <NAME>OntoGazetteer</NAME>
      <CLASS>gate.creole.gazetteer.OntoGazetteerImpl</CLASS>
      <COMMENT>A list lookup component based on mapping between ontology classes and gazetteer lists</COMMENT>
      <PARAMETER NAME="document" RUNTIME="true" COMMENT="The document to be processed">gate.Document</PARAMETER>
      <PARAMETER NAME="annotationSetName" RUNTIME="true" COMMENT="The annotation set to be used for the generated annotations" OPTIONAL="true">java.lang.String</PARAMETER>
      <PARAMETER NAME="listsURL" DEFAULT="gate:/creole/gazeteer/default/lists.def" COMMENT="The URL to the file with list of lists" SUFFIXES="def">java.net.URL</PARAMETER>
      <PARAMETER DEFAULT="UTF-8" NAME="encoding" COMMENT="The encoding used for reading the definitions">java.lang.String</PARAMETER>
      <PARAMETER DEFAULT="true" NAME="caseSensitive" COMMENT="Should this gazetteer diferentiate on case. Currently the Gazetteer works only in case sensitive mode.">java.lang.Boolean</PARAMETER>
      <PARAMETER NAME="mappingURL" DEFAULT="gate:/creole/gazeteer/default/mapping.def" COMMENT="The URL to the file with mappings of lists vs classes" SUFFIXES="def">java.net.URL</PARAMETER>
      <PARAMETER NAME="gazetteerName" DEFAULT="com.ontotext.gate.gazetteer.HashGazetteer" COMMENT="The gazetteer tobe used with this ontogazetteer. should implement Gazetteer interface">java.lang.String</PARAMETER>
      <ICON>shefGazetteer.gif</ICON>
    </RESOURCE>
  </CREOLE>

  <!-- creole.xml for Visual Resources -->
  <CREOLE>
    <!-- VR Ontology Editor -->
    <RESOURCE>
      <NAME>Ontology Editor</NAME>
      <CLASS>com.ontotext.gate.vr.OntologyEditorImpl</CLASS>
      <GUI TYPE="large">
        <MAIN_VIEWER/>
        <RESOURCE_DISPLAYED>gate.creole.ontology.Taxonomy</RESOURCE_DISPLAYED>
      </GUI>
    </RESOURCE>

    <!-- VR Protege -->
    <RESOURCE>
      <NAME>Protege</NAME>
      <CLASS>gate.gui.ProtegeWrapper</CLASS>
      <GUI TYPE="large">
        <MAIN_VIEWER/>
        <RESOURCE_DISPLAYED>gate.ProtegeProject</RESOURCE_DISPLAYED>
      </GUI>
    </RESOURCE>
  </CREOLE>
  
</CREOLE-DIRECTORY>

