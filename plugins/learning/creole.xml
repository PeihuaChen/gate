<?xml version="1.0"?>
<!-- $Id$ -->
<CREOLE-DIRECTORY>
  <!-- Processing Resources -->
  <CREOLE>    
    <!-- creole.xml for the Learning PR -->
    <RESOURCE>
      <NAME>Batch Learning ALL PR</NAME>
    
      <CLASS>gate.learningLightWeight.LearningAPIMain</CLASS>
      <JAR>learningapi.jar</JAR>
      <JAR>lib/weka.jar</JAR>

      <PARAMETER NAME="configFileURL"
        COMMENT="The URL for the configuration file" RUNTIME="false" SUFFIXES="xml"
        OPTIONAL="false">java.net.URL</PARAMETER>

      <PARAMETER NAME="corpus" COMMENT="Corpus to be processed"
        RUNTIME="true" OPTIONAL="false">gate.Corpus</PARAMETER>

      <PARAMETER NAME="trainingMode"
        COMMENT="Train or classify the documents" RUNTIME="true" DEFAULT="true"
        OPTIONAL="false">java.lang.Boolean</PARAMETER>

	<PARAMETER NAME="evaluationMode"
        COMMENT="Train or classify the documents" RUNTIME="true" DEFAULT="false"
        OPTIONAL="true">java.lang.Boolean</PARAMETER>


      <PARAMETER NAME="inputASName"
        COMMENT="The name of the annotation set used for input" RUNTIME="true"
        OPTIONAL="true">java.lang.String</PARAMETER>

     </RESOURCE>
     
  </CREOLE>
  
  
</CREOLE-DIRECTORY>
