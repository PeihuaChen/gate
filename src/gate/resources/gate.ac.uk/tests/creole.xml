<?xml version="1.0"?>

<!-- TESTS TESTS TESTS TESTS TESTS -->

<!-- creole.xml directory file for testing resources -->
<!-- $Id$ -->
<CREOLE-DIRECTORY>

  <!-- creole.xml resource metadata file for test resources -->
  <CREOLE>

    <!-- Don't change this one - TestCreole assumes certain values here -->
    <RESOURCE>
      <NAME>Sheffield Test PR 1</NAME>
      <JAR>TestResources.jar</JAR>
      <CLASS>testpkg.TestPR1</CLASS>

      <PARAMETER DEFAULT="a default value" COMMENT="a param comment"
	OPTIONAL="true" NAME="thing2">java.lang.String</PARAMETER>
      <OR>
	<PARAMETER RUNTIME="trUe" NAME="HOOPY DOOPY">java.lang.String</PARAMETER>
	<PARAMETER DEFAULT="a default"
	  OPTIONAL="true" NAME="thing">java.lang.String</PARAMETER>
      </OR>

      <SOME-ARBITRARY-RESOURCE-FEATURE/>
    </RESOURCE>

    <RESOURCE>
      <NAME>Sheffield Test PR 2</NAME>
      <JAR>TestResources.jar</JAR>
      <CLASS>testpkg.TestPR2</CLASS>
      <AUTOLOAD/>
      <VIEW TITLE="turds float nicely" ANNOT="x">gate.gui.SomeViewer</VIEW>
      <VIEW
	SMALL="true"
        TITLE="a small view"
	ANNOT="x">gate.gui.SomeSmallViewer</VIEW>
      <ICON>anIconForTPR2</ICON>
    </RESOURCE>

    <RESOURCE>
      <NAME>Sheffield Test PR 3 (Print Out Tokens)</NAME>
      <JAR>TestResources.jar</JAR>
      <CLASS>testpkg.PrintOutTokens</CLASS>
      <PARAMETER NAME="document"
        RUNTIME="true">gate.corpora.DocumentImpl</PARAMETER>
      <TOOL/>
    </RESOURCE>

  </CREOLE>

   <!-- creole.xml for tokeniser -->
  <CREOLE>
    <RESOURCE>
      <NAME>ANNIE Unicode Tokeniser</NAME>
      <CLASS>gate.creole.tokeniser.DefaultTokeniser</CLASS>
      <COMMENT>A customisable tokeniser.</COMMENT>

      <PARAMETER NAME="tokeniserRulesURL"
                 DEFAULT="gate:/creole/tokeniser/DefaultTokeniser.rules"
                 COMMENT="The URL for the rules file">java.net.URL</PARAMETER>
      <PARAMETER NAME="transducerGrammarURL"
                 DEFAULT="gate:/creole/tokeniser/postprocess.jape"
                 COMMENT="The URL for the postprocessing transducer"
                 >java.net.URL</PARAMETER>
      <PARAMETER NAME="encoding"
                 COMMENT="The encoding used for reading the definitions"
                 DEFAULT="UTF-8">java.lang.String</PARAMETER>
      <PARAMETER NAME="document"
                 COMMENT="The document to be tokenised"
                 RUNTIME="true">gate.corpora.DocumentImpl</PARAMETER>
      <PARAMETER NAME="annotationSetName" RUNTIME="true"
                 COMMENT=
                  "The annotation set to be used for the generated annotations"
                 OPTIONAL="true">java.lang.String</PARAMETER>
      <ICON>shefTokeniser.gif</ICON>
    </RESOURCE>
  </CREOLE>

  <!-- creole.xml for doc formats -->
  <CREOLE>
    <RESOURCE>
      <NAME>Sheffield XML Document Format</NAME>
      <JAR>ShefDocumentFormats.jar</JAR>
      <CLASS>gate.corpora.XmlDocumentFormat</CLASS>
      <AUTOLOAD/>
      <PRIVATE/>
    </RESOURCE>

    <RESOURCE>
      <NAME>Sheffield Email Document Format</NAME>
      <JAR>ShefDocumentFormats.jar</JAR>
      <CLASS>gate.corpora.EmailDocumentFormat</CLASS>
      <AUTOLOAD/>
      <PRIVATE/>
    </RESOURCE>
  </CREOLE> 

  <!-- documents -->
  <CREOLE>

    <RESOURCE>
      <NAME>GATE document</NAME>
      <CLASS>gate.corpora.DocumentImpl</CLASS>
      <INTERFACE>gate.Document</INTERFACE>
      <COMMENT>GATE document</COMMENT>

      <PARAMETER
	NAME="sourceUrlName"
	COMMENT="Source URL name">java.lang.String</PARAMETER>

      <PARAMETER NAME="encoding" OPTIONAL="true"
	COMMENT="Encoding">java.lang.String</PARAMETER>

      <PARAMETER NAME="sourceUrlStartOffset"
	COMMENT="Start offset for documents based on ranges"
	OPTIONAL="true">java.lang.Long</PARAMETER>

      <PARAMETER NAME="sourceUrlEndOffset"
	COMMENT="End offset for documents based on ranges"
	OPTIONAL="true">java.lang.Long</PARAMETER>

      <FUNKY-METADATA-THAING>hubba hubba</FUNKY-METADATA-THAING>
    </RESOURCE>

  </CREOLE>

  <!-- metadata for gate.creole.SerialController -->
  <CREOLE>
    <RESOURCE>
      <NAME>GATE sequential control executive</NAME>
      <CLASS>gate.creole.SerialController</CLASS>
    </RESOURCE>
  </CREOLE>

</CREOLE-DIRECTORY>
