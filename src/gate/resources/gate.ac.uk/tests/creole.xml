<?xml version="1.0"?>

<!-- creole.xml directory file for testing resources -->
<!-- $Id$ -->
<CREOLE-DIRECTORY>

  <!-- creole.xml resource metadata file for test resources -->
  <CREOLE>

    <!-- Don't change this one - TestCreole assumes certain values here -->
    <RESOURCE>
      <NAME>Sheffield Test PR 1</NAME>
      <JAR>TestResources.jar</JAR>
      <CLASS>testpkg.TestPR1</CLASS>

      <PARAMETER-LIST>
	<PARAMETER RUNTIME="trUe" NAME="HOOPY DOOPY">param0</PARAMETER>
      </PARAMETER-LIST>

      <PARAMETER-LIST>
	<PARAMETER DEFAULT="a default"
	  OPTIONAL="false" NAME="someparam">param1</PARAMETER>
	<PARAMETER DEFAULT="" COMMENT="a param comment"
	  OPTIONAL="true" NAME="some other param">param2</PARAMETER>
      </PARAMETER-LIST>

      <SOME-ARBITRARY-RESOURCE-FEATURE/>
    </RESOURCE>

    <RESOURCE>
      <NAME>Sheffield Test PR 2</NAME>
      <JAR>TestResources.jar</JAR>
      <CLASS>testpkg.TestPR2</CLASS>
      <AUTOLOAD/>
    </RESOURCE>

  </CREOLE>

  <!-- creole.xml for tokeniser -->
  <CREOLE>
    <RESOURCE>
      <NAME>Sheffield Unicode Tokeniser</NAME>
      <JAR>ShefUniTok.jar</JAR>
      <CLASS>gate.creole.Tokeniser</CLASS>
    </RESOURCE>
  </CREOLE> 

  <!-- creole.xml for doc formats -->
  <CREOLE>
    <RESOURCE>
      <NAME>Sheffield XML Document Format</NAME>
      <JAR>ShefDocumentFormats.jar</JAR>
      <CLASS>gate.corpora.XmlDocumentFormat</CLASS>
      <AUTOLOAD/>
    </RESOURCE>

    <RESOURCE>
      <NAME>Sheffield Email Document Format</NAME>
      <JAR>ShefDocumentFormats.jar</JAR>
      <CLASS>gate.corpora.EmailDocumentFormat</CLASS>
      <AUTOLOAD/>
    </RESOURCE>
  </CREOLE> 

  <!-- documents -->
  <CREOLE>

    <RESOURCE>
      <NAME>GATE document</NAME>
      <CLASS>gate.corpora.DocumentImpl</CLASS>
      <INTERFACE>gate.Document</INTERFACE>
      <COMMENT>GATE document</COMMENT>

      <PARAMETER-LIST>

        <PARAMETER
	  NAME="sourceUrlName"
	  COMMENT="Source URL name">java.lang.String</PARAMETER>

        <PARAMETER NAME="encoding" OPTIONAL="true"
	  COMMENT="Encoding">java.lang.String</PARAMETER>

        <PARAMETER NAME="sourceUrlStartOffset"
	  COMMENT="Start offset for documents based on ranges"
	  OPTIONAL="true">java.lang.Long</PARAMETER>

        <PARAMETER NAME="sourceUrlEndOffset"
	  COMMENT="End offset for documents based on ranges"
	  OPTIONAL="true">java.lang.Long</PARAMETER>

      </PARAMETER-LIST>

      <FUNKY-METADATA-THAING>hubba hubba</FUNKY-METADATA-THAING>
    </RESOURCE>

  </CREOLE>

</CREOLE-DIRECTORY>
